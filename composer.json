  "type": "project",
  "license": "MIT",
  "autoload": {
    "psr-4": {
      "uuf6429\\RuneExamples\\ShopExample\\": "shop-example/src/"
    }
  },
  "authors": [
    {
      "name": "Christian Sciberras",
      "email": "christian@sciberras.me"
    }
  ],
  "minimum-stability": "dev",
  "require": {
    "php": "^8.1",
    "uuf6429/rune": "dev-main"
